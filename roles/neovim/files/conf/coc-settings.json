{
    "languageserver": {
        "golang": {
            "command": "bingo",
            "args": [
                "--diagnostics-style=none",
                "--format-style=goimports"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "phpactor": {
            "command": "phpactor",
            "args": ["language-server"],
            "filetypes": ["php"],
            "initializationOptions": {
            },
            "settings": {
            }
        }
    },
    "suggest.snippetIndicator": " â–º",
    "suggest.echodocSupport": false,
    "coc.preferences.hoverTarget": "float",
    "diagnostic.enable": false,
    "coc.preferences.formatOnSaveFiletypes": ["go", "json"],
    "html.format.enable": true
}

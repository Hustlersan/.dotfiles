{
    "languageserver": {
        "golang": {
            "command": "bingo",
            "args": [
                "--diagnostics-style=instant",
                "--format-style=goimports"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        },
        "phplang": {
            "command": "php",
            "args": [
                "~/.composer/vendor/felixfbecker/language-server/bin/php-language-server.php"
            ],
            "filetypes": [
                "php"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        }
    },
    "suggest.snippetIndicator": " â–º",
    "suggest.echodocSupport": true,
    "coc.preferences.hoverTarget": "echo",
    "diagnostic.enable": true,
    "diagnostic.displayByAle": true,
    "coc.preferences.formatOnSaveFiletypes": ["go", "json"]
}

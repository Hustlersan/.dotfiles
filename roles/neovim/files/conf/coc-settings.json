{
  "languageserver": {
    "golang": {
      "command": "bingo",
      "args": [],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  },
  "suggest.snippetIndicator": " â–º",
  "suggest.echodocSupport": true,
  "suggest.detailField": "abbr",
  "suggest.enablePreselect": false,
  "suggest.maxCompleteItemCount": 200,
  "diagnostic.enable": false,
  "diagnostic.displayByAle": false,
  "html.format.enable": true,
  "coc.preferences.hoverTarget": "float",
  "python.jediEnabled": false,
  "yaml.format.enable": true,
  "yaml.hover": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/awslabs/goformation/master/schema/cloudformation.schema.json": "/cf.yml",
    "https://raw.githubusercontent.com/awslabs/goformation/master/schema/sam.schema.json": "/cf.yml",
    "https://raw.githubusercontent.com/softprops/serverless-yml-schema/master/serverless-schema.json": "/serverless.yaml",
    "http://json.schemastore.org/circleciconfig": "/.circleci/config.yml",
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.0.json": "/docker-compose*.yml"
  },
  "json.schemas": [
    { "http://json.schemastore.org/composer": "/composer.json" },
    { "http://json.schemastore.org/package": "/package.json" }
  ],
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.implementationsCodeLens.enabled": true,
  "java.referencesCodeLens.enabled": true,
  "git.enableGutters": true,
  "coc.source.issues.enable": false,
  "git.realtimeGutters": false,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGBlameToBufferVar": true,
  "yank.enableCompletion": true,
  "yank.highlight.duration": 100,
  "explorer.quitOnOpen": true,
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.file.columns": ["selection", "clip", "indent", "icon", "filename"],
  "explorer.keyMappings": {
    "u": "gotoParent"
  }
}
